{% extends 'layouts/base.njk' %}

{% block content %}
<section class="home">
  <div class="content">
    <div class="hero">
      <img class="hero__image" srcset="/assets/images/global/blue-ridge-mountains.jpg" alt="Blue Ridge Mountains">
    </div>
    {% include 'partials/social.njk' %}
    <div class="latest">
      <h2 class="latest__heading">The Latest</h2>
      {% for entry in collections.latestPosts %}
        <article class="latest__article">
            <h3 class="latest__article__heading">
              <a href="{{entry.url}}">{{ entry.data.title }}</a>
            </h3>
            <p class="latest__article__text">
              {{ entry.date }}
              {{ entry.data.description }}
            </p>
        </article>
      {% endfor %}
    </div>
  </div>
</section>
{% endblock %}