{% extends 'layouts/base.njk' %}

{% block styleBlock %}
  {% set prismCss %}
    {% include 'css/prism.css' %}
    {% include 'css/components/post.pcss' %}
  {% endset %}
  <style>{{ prismCss | cssmin | safe }}</style>
{% endblock %}

{% block content %}
  <section class="posts">
    <article class="post">
      <header class="post__header">
        <h1 class="post__title">{{ title }}</h1>
        <p class="post__date">{{ date | parseDateReadable }}</p>
      </header>
      <div class="post__content">
        {{ content | safe }}
        <p class="twitter-link"><a>Discuss on Twitter.</a></p>
      </div>
      <script>
        document.querySelector('.twitter-link>a').href = `https://mobile.twitter.com/search?q=${window.location.href}`;
      </script>             
    </article>
  </section>
{% endblock %}