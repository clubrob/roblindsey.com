/* Post Single */
.posts {
  max-width: 640px;
}
.post {
  max-width: 640px;
}
.post__header {
  border-bottom: 1px solid #b2b2b2;
  h1 {
    font-size: 4rem;
    line-height: 1.3;
  }
}
p.post__date {
  margin-bottom: 0;
}
p.post__date {
  color: #555;
  font-size: 1.2rem;
}
.post__content {
  padding-top: 40px;
  iframe {
    width: 100%;
    height: 300px;
    margin-bottom: 2rem;
  }
}