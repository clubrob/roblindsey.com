.post_list {
  max-width: 640px;
  margin: 0 auto;
}
.post_list__heading {
  margin: 0;
  padding: 0;
  font-weight: 700;
  font-size: 4.5rem;
  border-bottom: 1px solid #b2b2b2;
}
.post_list__post {
  padding-top: 40px;
}
.post_list__post__heading {
  padding: 0;
  margin: 0;
  font-size: 2.4rem;
  font-weight: 700;
}
p.post_list__post__date {
  color: #aaa;
  font-size: 1.3rem;
}