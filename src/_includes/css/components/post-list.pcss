.post_list {
  max-width: 640px;
  margin: 0 auto;
}
.post_list__post {
  background: lavender;
  border-radius: 10px;
  padding: 2rem;
  margin: 2.5rem 0;
}
.post_list__post__heading {
  padding: 0;
  margin: 0;
  font-size: 2.4rem;
  font-weight: 700;
}
p.post_list__post__date {
  color: #555;
  font-size: 1.2rem;
}