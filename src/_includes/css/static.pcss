.home {
  max-width: 100%;
  margin: 0 auto;
}
.about, .contact, .uses {
  max-width: 640px;
  margin: 0 auto;
}
.page-heading {
  margin: 0;
  padding: 0;
  font-weight: 700;
  font-size: 4.5rem;
  border-bottom: 1px solid #b2b2b2;
}
.social-icons {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(8rem, 1fr));
  text-align: center;
  margin: 0 auto;
  padding-top: 80px;
}
.hero {
  border: 8px solid var(--color-primary-90);
}
.latest {
  padding-top: 80px;
}
.read-more {
  display: flex;
  justify-content: flex-end;
}
.svg-logo {
  width: 70px;
  height: 70px;
}
.svg-bg, .svg-fg {
  transition: fill 200ms ease-in-out;
}
.twitter-logo:hover .twitter-bg {
  fill: #55ACEE;
}
.linkedin-logo:hover .linkedin-bg {
  fill: #007BB5;
}
.behance-logo:hover .behance-bg {
  fill: #0057FF;
}
.codepen-logo:hover .codepen-bg {
  fill: #FFDD40;
}
.rss-logo:hover .rss-bg {
  fill: #FF6600;
}
.twitter-logo:hover .twitter-fg,
.github-logo:hover .github-bg,
.linkedin-logo:hover .linkedin-fg,
.behance-logo:hover .behance-fg,
.rss-logo:hover .rss-fg {
  fill: #ffffff;
}
.github-logo:hover .github-fg,
.codepen-logo:hover .codepen-fg {
  fill: #000000;
}

