.bookshelf {
  width: 100%;
}
.bookshelf__heading {
  margin: 0;
  padding: 0;
  font-weight: 700;
  font-size: 4.5rem;
  border-bottom: 1px solid #b2b2b2;
}
.books {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(12rem, 1fr));
  grid-gap: 4rem;
  margin-bottom: 50px;
  border-bottom: 1px solid #b2b2b2;
}
.book__title {
  color: var(--color-body-text);
}